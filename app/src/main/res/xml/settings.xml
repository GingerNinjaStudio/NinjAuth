<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ListPreference
        android:defaultValue="@string/settings_appearance_theme_default_value"
        android:entries="@array/settings_appearance_theme_entries"
        android:entryValues="@array/settings_appearance_theme_values"
        android:icon="@drawable/ic_palette_24dp"
        android:key="@string/settings_appearance_theme_key"
        android:title="@string/settings_appearance_theme_title"
        app:useSimpleSummaryProvider="true" />
    <Preference
        android:icon="@drawable/ic_restore_24dp"
        android:key="@string/settings_main_backup_key"
        android:summary="Auto-Backup, Export, Import"
        android:title="Backup &amp; Restore" />
    <Preference
        android:icon="@drawable/ic_lock_24dp"
        android:key="@string/settings_main_security_key"
        android:summary="App lock, Biometrics, Privacy"
        android:title="@string/settings_security_title" />
    <Preference
        android:enabled="false"
        android:icon="@drawable/ic_extension_24dp"
        android:key="settings_main_module_key"
        android:summary="Time Corrector"
        android:title="Modules" />
    <Preference
        android:enabled="false"
        android:icon="@drawable/ic_info_24dp"
        android:key="settings_main_info_key"
        android:summary="Licenses, Version"
        android:title="About" />
</PreferenceScreen>